{
  "name": "cocoatalk",
  "version": "1.0.0",
  "description": "An unofficial KakaoTalk client",
  "main": "src/index.ts",
  "repository": "https://github.com/thoratica/CocoaTalk.git",
  "scripts": {
    "start": "concurrently --raw \"npm:start:esbuild\" \"npm:start:electron\"",
    "start:esbuild": "cross-env NODE_ENV=development node build.js",
    "start:electron": "electron -r ts-node/register src/electron.ts",
    "build": "concurrently --raw \"npm:build:esbuild\" \"npm:build:electron\"",
    "build:esbuild": "node build.js",
    "build:electron": ""
  },
  "author": "thoratica <me@tica.fun>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^15.12.2",
    "@types/react-dom": "^17.0.7",
    "@types/react-virtualized": "^9.21.12",
    "@types/recoil": "^0.0.9",
    "@types/styled-components": "^5.1.10",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.1",
    "electron-builder": "^22.10.5",
    "esbuild": "^0.12.7",
    "esbuild-sass-plugin": "^1.4.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "copy-text-to-clipboard": "^3.0.1",
    "file-type": "^16.5.1",
    "image-size": "^1.0.0",
    "node-kakao": "thoratica/node-kakao",
    "react": "^17.0.2",
    "react-contexify": "^5.0.0",
    "react-custom-scrollbars-2": "^4.4.0",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-hot-toast": "^2.0.0",
    "react-image": "^4.0.3",
    "react-imgp": "^4.0.2",
    "react-text-ellipsis": "^1.6.0",
    "react-use-dimensions": "^1.2.1",
    "react-virtualized": "^9.22.3",
    "recoil": "^0.3.1",
    "slash": "^4.0.0",
    "styled-components": "^5.3.0"
  }
}
